<body>
    <div class="box">
        <% records.forEach((record, index) => { %>
            <% if (index % 3 === 0) { %>
                <ul class="dynamic-list">
            <% } %>

            <li class="record-item"
                data-id="<%= record.id %>"
                data-description="<%= record.description %>"
                data-created_by="<%= record.created_by %>"
                data-origin_site_name="<%= record.origin_site_name %>"
                data-destination_site_name="<%= record.destination_site_name %>"
                data-created_at="<%= new Date(record.created_at).toLocaleString('en-US') %>">

                <span></span>
                <div class="title"><%= record.id %></div>
                <div class="info"><%= record.description %></div>
                <div class="name"><%= record.created_by %></div>
                <div class="name"><%= record.destination_site_name %></div>
                <div class="time">
                    <span>
                        <%= new Date(record.created_at).toLocaleString('en-US', { month: 'short', day: 'numeric' }) %><sup>th</sup>
                    </span>
                    <span><%= new Date(record.created_at).toLocaleTimeString('en-US') %></span>
                </div>
            </li>

            <% if (index % 3 === 2 || index === records.length - 1) { %>
                </ul>
                <div class="arrow" id="btn<%= Math.floor(index / 3) + 1 %>">
                    <!-- SVG code here -->
                </div>
            <% } %>
        <% }) %>
    </div>

