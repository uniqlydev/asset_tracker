<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Records</title>
    <link rel="stylesheet" href="/styles/resource.css">
    <link rel="stylesheet" href="/styles/records.css">
    <script src="/scripts/records.js"></script>
</head>
<body>
    <div class="box">
        <% records.forEach((record, index) => { %>
            <% if (index % 3 === 0) { %> <!-- Start a new list every 3 records -->
                <ul class="dynamic-list">
            <% } %>

            <li>
                <span></span>
                <div class="title"><%= record.id %></div>
                <div class="info"><%= record.description %></div>
                <div class="name"><%= record.created_by %></div>
                <div class="name"><%= record.destination_site_name %></div>
                <div class="time">
                    <span>
                        <%= new Date(record.created_at).toLocaleString('en-US', { month: 'short', day: 'numeric' }) %><sup>th</sup>
                    </span>
                    <span><%= new Date(record.created_at).toLocaleTimeString('en-US') %></span>
                </div>
            </li>

            <% if (index % 3 === 2 || index === records.length - 1) { %> <!-- Close the list after 3 records or at the end -->
                </ul>
                <div class="arrow" id="btn<%= Math.floor(index / 3) + 1 %>">
                    <!-- SVG code here -->
                </div>
            <% } %>
        <% }) %>
    </div>

    <%- include('partials/navbar.ejs') %>
</body>
</html>
